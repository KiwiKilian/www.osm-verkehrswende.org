{
  "name": "astro",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "npm run dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check && tsc --skipLibCheck",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|astro|mdx)\"",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|astro|mdx)\" --write",
    "check": "npm run type-check && npm run format && npm run lint",
    "update": "npx npm-check-updates -u",
    "prepare": "husky install"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.19.7",
    "@astrojs/react": "^2.2.1",
    "@astrojs/rss": "^2.4.3",
    "@astrojs/sitemap": "^1.3.3",
    "@astrojs/tailwind": "^4.0.0",
    "astro": "^2.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remark-toc": "^8.0.1",
    "tailwind-merge": "^1.13.2",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "husky": "^8.0.3"
  }
}
